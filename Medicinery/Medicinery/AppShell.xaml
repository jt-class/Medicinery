<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Medicinery.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Medicinery"
    Shell.FlyoutBehavior="Disabled"
    Title="Medicinery">

    <TabBar>
        <ShellContent
        Title="Home"
        Icon="Home.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="HomePage" />

        <ShellContent
        Title="Categories"
        Icon="Categories.png" 
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="CategoriesPage" />

        <ShellContent
        Title="A.I Maymax"
        Icon="A.I.png" 
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="A.I Page" />
        <ShellContent
        Title="Profile"
        Icon="Profile.png" 
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="ProfilePage" />
       
    </TabBar>
    <ShellContent Title="SignUpPages" ContentTemplate="{DataTemplate local:SignUpPages}" />
    <ShellContent Title="LoginPage" ContentTemplate="{DataTemplate local:LoginPage}" />
    

</Shell>
