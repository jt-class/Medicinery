<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Medicinery.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Local="clr-namespace:Medicinery.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Medicinery">

    <ShellContent 
        Title="SplashScreen" 
        ContentTemplate="{DataTemplate Local:SplashScreen}" 
        Route="SplashScree"
        />

    <ShellContent 
        Title="SelectionPage" 
        ContentTemplate="{DataTemplate Local:SelectionPage}"
        Route="SelectionPage"
        />
    <ShellContent 
        Title="LoginPage" 
        ContentTemplate="{DataTemplate Local:LoginPage}"
        Route="LoginPage"
        />
    <ShellContent 
        Title="DriversLogin" 
        ContentTemplate="{DataTemplate Local:DriversLogin}"
        Route="DriversLogin"
        />
    
</Shell>
